---
interface Props {
  title: string;
  summary: string;
  image: string;
  url: string;
}

const { title, summary, image, url } = Astro.props;
---

<article class="bg-gray-950 rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-shadow border border-gray-700">
  <div class="h-48 overflow-hidden">
    <img 
      src={image || "/placeholder.svg"} 
      alt={title} 
      class="w-full h-full object-cover"
    />
  </div>
  <div class="p-6">
    <h3 class="text-xl font-bold mb-2 text-white">{title}</h3>
    <p class="text-gray-300 mb-4">{summary}</p>
    <a 
      href={url} 
      class="inline-block bg-purple-600 hover:bg-purple-700 text-white font-medium py-2 px-4 rounded-md transition-colors"
    >
      Read More
    </a>
  </div>
</article>